#!/usr/bin/env tclsh
#
# Michael B. Kulik
# 6/16/2011
#
# Command line control script for movie streaming server
#

# include common control functions for command line and 
# gui version
source [file dirname [info script]]/src/common.tcl 


proc usage {} {
	puts "mvsctl {start|stop|devel|install|build|change \[path\]}"
}

if { $argc < 1 } {
	usage
	exit 1
} else {
	
set command [ lindex $argv 0]

switch $command {

	"start"		{ start }
	"stop"  	{ stop }
	"devel" 	{ devel }
	"install"	{ install }
	"build" 	{ build }
	"change" 	{ change }
	default 	{ usage }
}

}

